{
  "manifest_version": 2,
  "name": "AMP Now Playing Getter",
  "version": "1.0.1",
  "description": "Extracts now playing information from Apple Music, sends to WebSocket, and optionally saves to text file.",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "https://music.apple.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://music.apple.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
        "id": "amp-now-playing-getter@vctr.ninja",
        "data_collection_permissions": {
          "required": [
             "websiteContent"
          ],
          "optional": [
             "technicalAndInteraction"
          ]
         }
      }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "AMP Now Playing Getter",
    "default_icon": {
      "16": "ampnpg16.png",
      "32": "ampnpg32.png",
      "48": "ampnpg48.png",
      "128": "ampnpg.png"
    }
  },
  
  "icons": {
    "16": "ampnpg16.png",
    "32": "ampnpg32.png", 
    "48": "ampnpg48.png",
    "128": "ampnpg.png"
  }
}